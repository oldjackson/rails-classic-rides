<%= simple_form_for ([@car, @booking]) do |f| %>
    <%= daterange_input f, :start_date, :end_date %>
    <br>
    <div class="form-inputs">
      <%= f.input :total_price, :label => "Personal message", as: :text,  required: true %>
    </div>
    <div class="form-actions text-center">
      <%= f.submit "Request booking", class: 'btn btn-search btn-block' %>
    </div>
<% end %>

