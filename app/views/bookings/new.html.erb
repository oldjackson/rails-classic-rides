<div class="container col-sm-4 col-sm-offset-4">
  <h3 class="text-center">Add a new booking</h3>
  <%= simple_form_for @booking, :url => car_bookings_path, :method => :post do |f| %>
      <%= daterange_input f, :start_date, :end_date %>
      <br>
      <div class="form-inputs">
        <%= f.input :total_price, :label => "Personal message", as: :text,  required: true %>
      </div>
      <br>
      <div class="form-actions">
        <%= f.button :submit, "Book now", class: "btn-block" %>
      </div>
  <% end %>
</div>
