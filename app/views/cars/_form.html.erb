<h2>Add a new car</h2>
<%= simple_form_for @car do |f| %>
  <div class="form-inputs">
    <%= f.input :make, required: true %>
    <%= f.input :model, required: true %>
    <%= f.input :year, required: true %>
    <%= f.input :description, required: true %>
    <%= f.input :price_day, required: true %>
    <%= f.input :location, required: true %>
    <%= f.input :number_seats, required: true %>
  </div>


  <h3>photos</h3>

  <div id='car_photos'>
    <%= f.simple_fields_for :car_photos do |p| %>
      <%= render 'car_photo_fields', :f => p %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'add photo', f, :car_photos %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.button :submit, "Create Car" %>
  </div>
<% end %>
