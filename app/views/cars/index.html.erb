

<div class="container">
  <h1 class="text-center">Let the fun begin...</h1>
  <br>
  <div class="row">
    <div class="col-sm-10 col-sm-offset-2">
      <!-- <div class="form-group">           -->



        <div class="row">
          <%= form_tag cars_path, method: :get do %>
          <div class="col-xs-12 col-sm-8">
            <div class="form-group">
              <!-- <input type="text" class="form-control" id="search" placeholder="Make, model, location ..."> -->
              <%= text_field_tag :search, params[:search], class: "form-control" %>
            </div>
          </div>
          <div class="col-xs-12 col-sm-4">
            <div class="form-group">
              <input type="submit" id="submit-btn" value="Search" class="btn">
            </div>
          </div>
          <% end %>
        </div>
        <!-- </div> -->
      </div>
    </div>
    <!-- <br> -->

    <!-- <div class="container"> -->
      <div class="row">
        <% @cars.each do |car| %>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 full-padded">
          <%= link_to car_path(car) do %>
          <div class="card">
            <div class="thumb-wrapper">
              <% if car.car_photos[car.cover_photo].nil? %>
              <div class="empty-thumbnail">
                <p>-- No picture --</p>
              </div>
              <% else %>
              <div class="pic-thumbnail" style="background-image: url(<%= car.car_photos[car.cover_photo].photo.url(:thumbnail) %>);"></div>
              <% end %>
            </div>
            <div class="car-label">
              <p><%= "#{car.make} #{car.model} (#{car.year})" %></p>
            </div>
            <div class="car-details">
              <p><i class="fas fa-users"></i><%= " #{car.number_seats}  " %><i class="  fas fa-euro-sign"></i><%= " #{car.price_day}" %><i class="  fas fa-map-marker-alt"></i><%= " #{car.location}" %></p>
            </div>

          </div>
          <% end %>
        </div>
        <% end %>
      </div>
      <!-- </div> -->

      <div class="text-center">
        <%= link_to "Add a new car", new_car_path, class: "btn" %>
      </div>
    </div>


