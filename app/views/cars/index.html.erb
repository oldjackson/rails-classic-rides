

  <div class="container">
    <h1 class="text-center">Let the fun begin...</h1>
    <br>
    <div class="container col-sm-10 col-sm-offset-2">
      <%= form_tag(cars_path, method: :get) do %>
        <%= label_tag(:make, "Make") %>
        <%= text_field_tag :make, params[:make] %>
        <%= label_tag(:make, "Model") %>
        <%= text_field_tag :model, params[:model] %>
        <%= label_tag(:make, "Location") %>
        <%= text_field_tag :location, params[:location] %>
        <%= submit_tag 'Search', name: nil, class: "btn-search" %>
      <% end %>
    </div>
    <!-- <br> -->

  <div class="container">
    <div class="row">
      <% @cars.each do |car| %>
        <div class="col-xs-12 col-sm-4 full-padded">
          <%= link_to car_path(car) do %>
            <div class="card">
              <div class="thumb-wrapper">
                <% if car.car_photos[car.cover_photo].nil? %>
                  <div class="empty-thumbnail">
                    <p>-- No picture --</p>
                  </div>
                <% else %>
                  <div class="pic-thumbnail" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),url(<%= car.car_photos[car.cover_photo].photo.url(:thumbnail) %>);">

                    <div class="pic-location">
                      <p><i class="  fas fa-map-marker-alt"></i><%= " #{car.location}" %></p>
                    </div>
                    <div class="pic-price">
                      <p><i class="  fas fa-euro-sign"></i><%= " #{car.price_day}" %></p>
                    </div>

                  </div>
                <% end %>
              </div>
              <div class="car-label">
                <p><%= "#{car.make} #{car.model} (#{car.year})" %></p>
              </div>
              <div class="car-details">
                <p><i class="fas fa-users"></i><%= " #{car.number_seats}  " %></p>
                <p><i class="far fa-circle"></i> <%= car.driver_left ? "Left" : "Right" %></p>
                <p><i class="fas fa-user"></i> <%= car.chauffeur ? "Yes" : "No" %></p>
                <p><i class="fas fa-car"></i> <%= car.automatic ? "Automatic" : "Manual" %></p>
              </div>

            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

<!--   <div class="text-center">
    <%= link_to "Add a new car", new_car_path, class: "btn" %>
  </div> -->
</div>


